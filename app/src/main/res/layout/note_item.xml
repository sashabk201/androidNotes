<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:orientation="vertical"
    android:background="@color/colorItem"
    android:elevation="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/header"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp"
            android:textColor="@color/white"
            tools:text="Молоко" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="right"
            android:padding="16dp"
            tools:text="2019-04-15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/isJob"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@color/colorJob"
        android:padding="5dp"
        android:gravity="center"
        android:layout_margin="10dp"
        tools:text="job" />

    <TextView
        android:id="@+id/isHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@color/colorHome"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="10dp"
        tools:text="Home" />

    <TextView
        android:id="@+id/isPurchases"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@color/colorPurchases"
        android:padding="5dp"
        android:gravity="center"
        android:layout_margin="10dp"
        tools:text="Purchases"
        />
    <TextView
        android:id="@+id/isFavorites"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@color/colorFavorites"
        android:padding="5dp"
        android:gravity="center"
        android:layout_margin="10dp"
        tools:text="Favorites" />

    </LinearLayout>
</LinearLayout>